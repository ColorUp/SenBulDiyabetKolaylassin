<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imagetextbox_image"
            android:contentDescription="@string/abc_search_hint"
            android:layout_weight=".22"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/imagetextbox_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:paddingBottom ="10dip"
            android:text="?attr/label"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:singleLine="true"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_weight=".15"/>
        <EditText
            android:id="@+id/imagetextbox_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="?android:attr/hint"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:text="?android:attr/text"
            android:paddingBottom ="10dip"
            android:layout_weight=".25"/>
    <TextView
        android:id="@+id/imagetextbox_unit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:paddingBottom ="10dip"
        android:text="?attr/unit"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:singleLine="true"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_weight=".2"/>
    </LinearLayout>
    <Button
        android:id="@+id/imagetextbox_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:paddingBottom ="10dip"
        android:src="@drawable/ic_action_search"
        android:layout_weight=".2"/>
</LinearLayout>