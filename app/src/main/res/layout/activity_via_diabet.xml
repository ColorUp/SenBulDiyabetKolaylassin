<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/grid_layout">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_blood_check"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_weight=".33">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_last_check"
                android:id="@+id/text_last_check"
                android:inputType="text"
                android:layout_gravity="top"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_last_check_blood"
                android:id="@+id/text_last_check_blood"
                android:inputType="numberSigned"
                android:layout_gravity="left"
                android:drawableRight="@mipmap/ic_blood_drop"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_last_check_date"
                android:id="@+id/text_last_check_date"
                android:inputType="date"
                android:layout_gravity="bottom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_weight=".33">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_last_check_insulin"
                android:id="@+id/text_last_check_insulin"
                android:inputType="numberSigned"
                android:layout_gravity="top"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:text="@string/text_insulin"
                android:id="@+id/text_insulin"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_last_check_date"
                android:inputType="date"
                android:id="@+id/text_last_check_insulin_date"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".33">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_auto_comment_time"
                android:inputType="time"
                android:id="@+id/text_auto_comment_time"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_auto_comment"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:id="@+id/text_auto_comment"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_last_days_view"
                android:id="@+id/text_last_days_view"
                android:inputType="textCapCharacters"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_line"
        android:layout_below="@+id/layout_blood_check"
        android:src="@drawable/decorativelinebottom"
        android:layout_marginTop="20dp"/>
        <LinearLayout
            android:id="@+id/layout_input_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image_line">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_main_primary_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_save_data"
                android:id="@+id/button_save_data"
                android:background="@drawable/buttonstyle"
                android:layout_weight=".2"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_main_primary_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_calculator"
                android:id="@+id/button_calculator"
                android:background="@drawable/buttonstyle"
                android:layout_weight=".2"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_main_primary_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_lines"
                android:id="@+id/button_lines"
                android:background="@drawable/buttonstyle"
                android:layout_weight=".2"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_main_primary_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_graphs"
                android:id="@+id/button_graphs"
                android:background="@drawable/buttonstyle"
                android:layout_weight=".2"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_database"
        android:layout_below="@+id/layout_graphs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_main_secondary_height"
            android:layout_marginLeft="@dimen/button_main_secondary_margin"
            android:layout_marginRight="@dimen/button_main_secondary_margin"
            android:layout_marginBottom="@dimen/button_main_secondary_margin"
            android:text="@string/button_remainders"
            android:id="@+id/button_remainders"
            android:layout_weight=".33"
            android:background="@drawable/buttonstyle"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_main_secondary_height"
            android:layout_marginLeft="@dimen/button_main_secondary_margin"
            android:layout_marginRight="@dimen/button_main_secondary_margin"
            android:layout_marginBottom="@dimen/button_main_secondary_margin"
            android:text="@string/button_database"
            android:id="@+id/button_database"
            android:layout_weight=".33"
            android:background="@drawable/buttonstyle"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_main_secondary_height"
            android:layout_marginLeft="@dimen/button_main_secondary_margin"
            android:layout_marginRight="@dimen/button_main_secondary_margin"
            android:layout_marginBottom="@dimen/button_main_secondary_margin"
            android:text="@string/button_reports"
            android:id="@+id/button_reports"
            android:layout_weight=".33"
            android:onClick="showNotif"
            android:background="@drawable/buttonstyle"/>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_statistics"
        android:layout_below="@+id/layout_database"
        android:src="@drawable/decorativelinebottom"
        android:layout_marginTop="20dp"/>
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/image_statistics">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_data"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textview_datetime"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value"
                    android:layout_marginLeft="20dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_time"
                    android:layout_marginLeft="20dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karbonhidrat"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="115 kCal"
                    android:layout_marginLeft="20dp"
                    android:layout_row="1"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30.07.2015 14:53"
                    android:layout_marginLeft="20dp"
                    android:layout_row="1"
                    android:layout_column="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalori"
                    android:layout_marginLeft="10dp"
                    android:layout_row="2"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85 kCal"
                    android:layout_marginLeft="20dp"
                    android:layout_row="2"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30.07.2015 14:53"
                    android:layout_marginLeft="20dp"
                    android:layout_row="2"
                    android:layout_column="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belirtilmemiş"
                    android:layout_marginLeft="10dp"
                    android:layout_row="3"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="20dp"
                    android:layout_row="3"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="20dp"
                    android:layout_row="3"
                    android:layout_column="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belirtilmemiş"
                    android:layout_marginLeft="10dp"
                    android:layout_row="4"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="20dp"
                    android:layout_row="4"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="20dp"
                    android:layout_row="4"
                    android:layout_column="2"/>
            </GridLayout>
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:columnCount="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_information"
                    android:layout_marginLeft="10dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ağırlık:"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 kg"
                    android:layout_marginLeft="45dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vücut Kitle İndeksi (BMI):"
                    android:layout_marginLeft="10dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="45dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bazal Metabolizma Hızı (BMR):"
                    android:layout_marginLeft="10dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:layout_columnWeight=".3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="45dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Günlük Kalori İhtiyacı:"
                    android:layout_marginLeft="10dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="45dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:layout_columnWeight=".2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam İnsülin (TDD):"
                    android:layout_marginLeft="10dp"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="45dp"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Basal İnsülin (TBD):"
                    android:layout_marginLeft="10dp"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="45dp"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karbonhidrat Oranı (I:C):"
                    android:layout_marginLeft="10dp"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="45dp"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İnsülin Duyarlılığı (ISF):"
                    android:layout_marginLeft="10dp"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="45dp"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:textStyle="bold"/>
            </GridLayout>
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:columnCount="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İstatistikler"
                    android:layout_marginLeft="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Kayıt:"
                    android:layout_marginLeft="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="45dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Günlük Glikoz Okuma Sayısı:"
                    android:layout_marginLeft="10dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="45dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahmini HbA1c:"
                    android:layout_marginLeft="10dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="45dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:textStyle="bold"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>