<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/grid_layout">
    <LinearLayout
        android:id="@+id/layout_blood_check"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_weight=".33">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_last_check" android:editable="true"
        android:id="@+id/text_last_check" android:inputType="text" android:layout_gravity="top"
        android:layout_weight=".2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_last_check_blood" android:editable="true"
        android:id="@+id/text_last_check_blood" android:inputType="numberSigned"
        android:layout_weight=".5"
        android:layout_gravity="center"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_blood"
            android:src="@mipmap/ic_blood_drop"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:layout_weight=".2"
            android:layout_gravity="center"/>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_last_check_date" android:editable="true"
        android:id="@+id/text_last_check_date" android:inputType="date"
        android:layout_gravity="bottom"
        android:layout_weight=".3"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/layout_margin_top"
    android:layout_marginLeft="@dimen/layout_margin_left"
    android:layout_marginRight="@dimen/layout_margin_right"
    android:layout_weight=".33">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_last_check_insulin"
        android:editable="true"
        android:id="@+id/text_last_check_insulin" android:inputType="numberSigned"
        android:layout_weight=".2" android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_last_check_date"
        android:editable="true" android:inputType="date"
        android:id="@+id/text_last_check_insulin_date"
        android:layout_weight=".5"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" android:inputType="text"
        android:text="@string/text_insulin" android:editable="true"
        android:id="@+id/text_insulin"
        android:layout_weight=".3"
        android:layout_gravity="bottom" android:gravity="center"/>
</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/layout_margin_top"
    android:layout_marginRight="@dimen/layout_margin_right"
    android:layout_weight=".33">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_auto_comment_time"
        android:editable="true" android:inputType="time"
        android:id="@+id/text_auto_comment_time"
        android:layout_weight=".2"
        android:layout_gravity="top"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_auto_comment" android:editable="true"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:id="@+id/text_auto_comment"
        android:layout_weight=".5"
        android:layout_gravity="right"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_last_days_view"
        android:id="@+id/text_last_days_view"
        android:inputType="textCapCharacters"
        android:layout_weight=".3"
        android:gravity="right"/>
</LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_line"
        android:layout_below="@+id/layout_blood_check"/>

    <LinearLayout
        android:id="@+id/layout_input_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="10"
        android:layout_below="@+id/image_line">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_main_primary_height"
        android:layout_marginLeft="@dimen/button_main_primary_margin"
        android:layout_marginRight="@dimen/button_main_primary_margin"
        android:layout_marginTop="@dimen/button_main_primary_margin"
        android:layout_marginBottom="@dimen/button_main_primary_margin"
        android:text="@string/button_save_data"
        android:id="@+id/button_save_data"
        android:clickable="true"
        android:layout_weight=".5"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_main_primary_height"
        android:layout_marginLeft="@dimen/button_main_primary_margin"
        android:layout_marginRight="@dimen/button_main_primary_margin"
        android:layout_marginTop="@dimen/button_main_primary_margin"
        android:layout_marginBottom="@dimen/button_main_primary_margin"
        android:text="@string/button_calculator"
        android:id="@+id/button_calculator"
        android:clickable="true"
        android:layout_weight=".5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_graphs"
        android:layout_below="@+id/layout_input_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="10">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_main_secondary_height"
        android:layout_marginLeft="@dimen/button_main_secondary_margin"
        android:layout_marginRight="@dimen/button_main_secondary_margin"
        android:layout_marginTop="@dimen/button_main_secondary_margin"
        android:layout_marginBottom="@dimen/button_main_secondary_margin"
        android:text="@string/button_lines"
        android:id="@+id/button_lines"
        android:layout_weight=".33"
        android:clickable="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_main_secondary_height"
        android:layout_marginLeft="@dimen/button_main_secondary_margin"
        android:layout_marginRight="@dimen/button_main_secondary_margin"
        android:layout_marginTop="@dimen/button_main_secondary_margin"
        android:layout_marginBottom="@dimen/button_main_secondary_margin"
        android:text="@string/button_graphs"
        android:id="@+id/button_graphs"
        android:layout_weight=".33"
        android:clickable="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_database"
        android:layout_below="@+id/layout_graphs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="10">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_main_secondary_height"
        android:layout_marginLeft="@dimen/button_main_secondary_margin"
        android:layout_marginRight="@dimen/button_main_secondary_margin"
        android:layout_marginTop="@dimen/button_main_secondary_margin"
        android:layout_marginBottom="@dimen/button_main_secondary_margin"
        android:text="@string/button_remainders"
        android:id="@+id/button_remainders"
        android:clickable="true"
        android:layout_weight=".33"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_main_secondary_height"
        android:layout_marginLeft="@dimen/button_main_secondary_margin"
        android:layout_marginRight="@dimen/button_main_secondary_margin"
        android:layout_marginTop="@dimen/button_main_secondary_margin"
        android:layout_marginBottom="@dimen/button_main_secondary_margin"
        android:text="@string/button_database"
        android:id="@+id/button_database"
        android:clickable="true"
        android:layout_weight=".33"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_main_secondary_height"
            android:layout_marginLeft="@dimen/button_main_secondary_margin"
            android:layout_marginRight="@dimen/button_main_secondary_margin"
            android:layout_marginTop="@dimen/button_main_secondary_margin"
            android:layout_marginBottom="@dimen/button_main_secondary_margin"
            android:text="@string/button_reports"
            android:id="@+id/button_reports"
            android:layout_weight=".33"
            android:clickable="true"
            android:onClick="showNotif" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_statistics"
        android:layout_below="@+id/layout_database"/>
</RelativeLayout>