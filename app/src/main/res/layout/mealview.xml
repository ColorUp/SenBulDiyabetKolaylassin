<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mealbg"
        android:layout_alignTop="@+id/meal_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="?attr/label"
            android:id="@+id/textView_label"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_meal1"
                android:layout_gravity="right|center_horizontal"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_meal2"
                android:layout_gravity="right|center_horizontal"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_meal3"
                android:layout_gravity="right|center_horizontal"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_meal4"
                android:layout_gravity="right|center_horizontal"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Yiyecek SeÃ§"
                android:background="@drawable/buttonstyle"
                android:layout_gravity="right"
                android:onClick="clickMealSelector"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="?android:attr/label"
        android:id="@+id/meal_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#febf05"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_marginStart="18dp"
        android:textSize="20dp"/>
</RelativeLayout>