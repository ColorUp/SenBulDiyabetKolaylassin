<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_date_time"
        android:id="@+id/text_date_time"
        android:layout_row="0" android:layout_columnSpan="2"
        android:layout_column="0"/>
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker" android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_column="2" android:scaleX="0.4" android:scaleY="0.4"
        android:layout_row="0" android:layout_columnSpan="4"
        android:clickable="true"
        android:spinnersShown="true" />
    <Space
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_row="0"
        android:layout_column="7" />
    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:timePickerMode="spinner"
        android:id="@+id/timePicker" android:layout_column="8" android:scaleX="0.4" android:scaleY="0.4"
        android:layout_row="0" android:layout_columnSpan="3"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_blood_drop"
        android:id="@+id/image_glicose"
        android:layout_row="1"
        android:layout_column="0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_glicose"
        android:id="@+id/text_glicose"
        android:layout_row="1"
        android:layout_column="1" android:layout_marginLeft="@dimen/textview_left_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/editable_text_glicose"
        android:layout_row="1"
        android:layout_column="2" android:layout_marginLeft="@dimen/textview_left_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/unity_mg_decilitre"
        android:id="@+id/text_mg_decilitre"
        android:layout_row="1"
        android:layout_column="3" android:layout_marginLeft="@dimen/textview_left_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_apple"
        android:id="@+id/image_carbonhydrade"
        android:layout_row="2"
        android:layout_column="0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_carbonhydrade"
        android:id="@+id/text_carbonhydrade"
        android:layout_row="2"
        android:layout_column="1" android:layout_marginLeft="@dimen/textview_left_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/editable_text_carbonhydrade"
        android:layout_row="2"
        android:layout_column="2" android:layout_marginLeft="@dimen/textview_left_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/unity_gram"
        android:id="@+id/text_gram"
        android:layout_row="2"
        android:layout_column="3" android:layout_marginLeft="@dimen/textview_left_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_siringa"
        android:id="@+id/image_insuline"
        android:layout_row="3"
        android:layout_column="0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_insuline"
        android:id="@+id/text_insuline"
        android:layout_row="3"
        android:layout_column="1" android:layout_marginLeft="@dimen/textview_left_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/editable_text_insuline"
        android:layout_row="3"
        android:layout_column="2" android:layout_marginLeft="@dimen/textview_left_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/unity_iu"
        android:id="@+id/text_ui"
        android:layout_row="3"
        android:layout_column="3" android:layout_marginLeft="@dimen/textview_left_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_category"
        android:id="@+id/image_category"
        android:layout_row="4"
        android:layout_column="0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_category"
        android:id="@+id/text_category"
        android:layout_row="4"
        android:layout_column="1" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_category"
        android:layout_row="4"
        android:layout_column="2" android:layout_columnSpan="2"/>

</GridLayout>