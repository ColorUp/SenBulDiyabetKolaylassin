<resources>
<!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionOverflowButtonStyle">@style/overflowButton</item>
        <item name="android:spinnerDropDownItemStyle">@style/customActionBarDropDownStyle</item>
    </style>

    <!--ActionBar-->
    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_purple</item>
        <item name="background">@android:color/holo_purple</item>
        <item name="icon">@mipmap/ic_actionbar</item>
        <item name="android:icon">@mipmap/ic_actionbar</item>
    </style>

    <style name="overflowButton">
        <item name="android:src">@android:drawable/ic_menu_more</item>
        <item name="android:showAsAction">always</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="customActionBarDropDownStyle" parent="@android:style/Widget.Holo.Light.ListView" >
        <item name="android:background">@drawable/abc_cab_background_top_material</item>
    </style>
</resources>